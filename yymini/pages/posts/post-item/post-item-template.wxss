.post-container{
    flex-direction:column;
    display:flex;
    margin-top:20rpx;
    margin-bottom:40rpx;
    margin-left: 0rpx;
    background-color:#fff;
    border-bottom: 1px solid #ededed;
    border-top: 1px solid #ededed;
    padding-bottom: 5px;
    overflow-x: hidden;
}

.post-author{
    display: flex;
    align-items: center;
    margin-top:10rpx;
    margin-bottom: 20rpx;
    margin-left: 10px;
}

.post-author-avatar{
    width:100rpx;
    height:100rpx;
    vertical-align: middle;
    border-radius: 50%;
}

.post-author-info {
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    height: 100rpx;
    margin-left: 20rpx;
}

.post-author-name{
    font-size: 30rpx;
}

.post-author-others{
    display: flex;
    align-items: center;
    font-size: 24rpx;
    color: #666;
}
.post-author-others .time {
  margin-right: 12rpx;
}

.show-post-image{
    width:100%;
    height:340rpx;
    margin:auto 0;
    margin-bottom: 15px;
    display: block;
}

.hide-post-image{
    width:100%;
    height:340rpx;
    margin:auto 0;
    margin-bottom: 15px;
    display: none;
}

.post-title{
    font-size:34rpx;
    color:#333;
    margin-bottom: 10px;
    margin-left: 10px;
}
.post-summary{
    color:#8d939b;
    font-size:28rpx;
    margin-bottom:20rpx;
    margin-left: 20rpx;
    letter-spacing:2rpx;
    line-height: 40rpx;
}
.post-like{
    font-size:13px;
    line-height: 16px;
    margin-left: 10px;
}

.post-like-image{
    height:16px;
    width:16px;
    margin-right: 8px;
    vertical-align:middle;
}

.post-like-font{
    vertical-align:middle;
    margin-right: 20px;
}
